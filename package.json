{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "raycast-pandoc",
  "title": "Pandoc",
  "description": "Run Pandoc directly from Raycast",
  "icon": "command-icon.png",
  "author": "nbbaier",
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "Pandoc",
      "description": "Template with a plain detail view",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.61.1",
    "@raycast/utils": "^1.10.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.8",
    "@types/node": "20.8.10",
    "@types/react": "18.2.34",
    "eslint": "^8.53.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}